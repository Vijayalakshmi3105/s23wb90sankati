extends layout

block content
  h1= title
  p Working on Pug 
  p My name is #{title}.
  button(type="button" class="btn btn-secondary" onclick="doReduce()") Press Me
  a(href='http://localhost:3000/vehicals') Link
  div#reduce Reduce the value
  script.
    let count = 20;
    let change = -1;
    function doReduce() {
      count += change;
      change -= 1;
      document.getElementById('reduce').textContent = `Count ${count} with change ${change}`;
    }
  
